{
    "swagger": "2.0",
    "basePath": "/api/auth",
    "paths": {
        "/v1/": {
            "post": {
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/Auth"
                        }
                    }
                },
                "operationId": "post_login",
                "parameters": [
                    {
                        "name": "grant_type",
                        "in": "formData",
                        "type": "string",
                        "required": true,
                        "description": "Grant type",
                        "default": "client_credentials"
                    },
                    {
                        "name": "X-Fields",
                        "in": "header",
                        "type": "string",
                        "format": "mask",
                        "description": "An optional fields mask"
                    }
                ],
                "security": [
                    {
                        "basicAuth": []
                    }
                ],
                "consumes": [
                    "application/x-www-form-urlencoded",
                    "multipart/form-data"
                ],
                "tags": [
                    "v1"
                ]
            }
        }
    },
    "info": {
        "title": "Application Authorization API",
        "version": "1.0",
        "description": "API for authenticating client credentials to be able to access the Kespry Platform APIs",
        "termsOfService": "/terms"
    },
    "produces": [
        "application/json"
    ],
    "consumes": [
        "application/json"
    ],
    "securityDefinitions": {
        "basicAuth": {
            "type": "basic"
        }
    },
    "security": [
        {
            "basicAuth": []
        }
    ],
    "tags": [
        {
            "name": "v1",
            "description": "APIs for authenticating"
        }
    ],
    "definitions": {
        "Auth": {
            "required": [
                "access_token",
                "clientID",
                "expiresIn",
                "issuedAt",
                "org",
                "tokenType"
            ],
            "properties": {
                "access_token": {
                    "type": "string",
                    "description": "Access Token",
                    "example": "<YOUR ACCESS TOKEN>"
                },
                "tokenType": {
                    "type": "string",
                    "description": "Token type (will always be BearerToken)",
                    "example": "BearerToken"
                },
                "issuedAt": {
                    "type": "integer",
                    "description": "UTC timestamp in milliseconds",
                    "example": "1723029552023"
                },
                "expiresIn": {
                    "type": "integer",
                    "description": "Number of seconds since issuedAt when this token expires",
                    "example": "36000"
                },
                "clientID": {
                    "type": "string",
                    "description": "Client ID used to generate this token",
                    "example": "<YOUR CLIENT ID>"
                },
                "org": {
                    "type": "string",
                    "description": "Organization responsible for this token",
                    "example": "api.kespry.com"
                }
            },
            "type": "object"
        }
    },
    "responses": {
        "ParseError": {
            "description": "When a mask can't be parsed"
        },
        "MaskError": {
            "description": "When any error occurs on mask"
        }
    }
}
